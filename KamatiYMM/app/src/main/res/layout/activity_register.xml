<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@drawable/register_background"
    >

    <ImageView
        android:id="@+id/register_imageview"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:src="@drawable/kamati_ymm_3_logo"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        />
    <EditText
        android:id="@+id/register_username"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:hint="Username"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/input_design"
        android:padding="15dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@+id/register_imageview"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/register_phone_number"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:hint="Phone Number"
        android:inputType="number"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/input_design"
        android:padding="15dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@+id/register_username"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:id="@+id/register_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:hint="Email address"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/input_design"
        android:padding="15dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@+id/register_phone_number"
        android:inputType="textEmailAddress"/>

        <Spinner
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:id="@+id/register_county"
            android:background="@drawable/buttons"
            android:backgroundTint="@color/white"
            android:layout_below="@id/register_email"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"

            />


        />

    <EditText
        android:id="@+id/register_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:hint="Password"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/input_design"
        android:padding="15dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@+id/register_county"

        />



    <Button
        android:id="@+id/register_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_password"
        android:layout_marginLeft="30dp"
        android:layout_margin="20dp"
        android:text="Create Account"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:background="@drawable/buttons"
        android:padding="15dp"
        />
    <TextView
        android:id="@+id/back_to_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_btn"
        android:text="Already have an account? Login"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        />

</RelativeLayout>