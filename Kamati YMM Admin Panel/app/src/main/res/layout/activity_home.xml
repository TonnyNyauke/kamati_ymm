<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">
    <TextView
        android:id="@+id/add_new_products_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Add New Products"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30sp"
        />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/product_layout1"
        android:orientation="horizontal"
        android:layout_below="@+id/add_new_products_txt"
        >
        <ImageView
            android:id="@+id/activated_charcoal_add"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/activated_charcoal"
            />
        <ImageView
            android:id="@+id/dandelion_add"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/dandelion"
            />
        <ImageView
            android:id="@+id/hibiscus_add"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/hibiscus"
            />
        <ImageView
            android:id="@+id/moringa_add"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/moringa"
            />


    </LinearLayout>

</RelativeLayout>